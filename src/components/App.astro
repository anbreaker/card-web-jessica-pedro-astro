---
import BaseLayout from '@layouts/BaseLayout.astro';
import Card from '@components/Card.astro';

import { getI18N } from '@i18n/index.ts';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const cvLinkByCountry = {
  pt: '/jessica-ns-pedro/files/Jessica-Pedro-Cv.pdf',
  es: '/jessica-ns-pedro/files/Jessica-Neves-da-Silva-Pedro-Cv.pdf',
};

const contactLinks = {
  linkedin: 'https://www.linkedin.com/in/jessicadasilvapedro/',
  gmail: 'mailto:jessicanspedro@gmail.com',
};

const profileImage = '/jessica-ns-pedro/images/jessica-pedro-profile.webp';
---

<BaseLayout
  title={i18n.BaseLayout.title}
  description={i18n.BaseLayout.description}
  author={i18n.BaseLayout.author}
  keywords={i18n.BaseLayout.keywords}
>
  <Card
    name={i18n.BaseLayout.title}
    position={i18n.Card.position}
    aboutMe={i18n.Card.abotuMe}
    linkedinLink={contactLinks.linkedin}
    logoAltText={i18n.Card.logoAltText}
    gmailLink={contactLinks.gmail}
    cvLink={cvLinkByCountry[currentLocale]}
    profileImage={profileImage}
  />
</BaseLayout>
