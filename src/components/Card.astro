---
const { aboutMe, cvLink, gmailLink, linkedinLink, logoAltText, name, position, profileImage } =
  Astro.props;

import LanguageSelector from './LanguageSelector.astro';
import ArrowBounce from './ArrowBounce.astro';

import '../styles/card.css';

import { getI18N } from '@i18n/index.ts';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const logo = '/jessica-ns-pedro/images/jessica-pedro-logo.webp';
---

<div class="container">
  <div class="card-container">
    <div class="descripcion">
      <h1 class="animation logo-title">
        <img src={logo} alt={logoAltText} />
        {position}
      </h1>
      <h2 class="name">{name}</h2>
      <p set:html={aboutMe}>{aboutMe}</p>

      <ArrowBounce />

      <footer class="icons">
        <a href={linkedinLink} class="hover-text" target="_blank" rel="noopener noreferrer">
          <span class="tooltip-text" id="fade">{i18n.Card.linkedIn}</span>
          <i class="animation bi bi-linkedin"></i>
        </a>
        <a href={gmailLink} class="hover-text" target="_blank" rel="noopener noreferrer">
          <span class="tooltip-text" id="fade">{i18n.Card.gmail}</span>
          <i class="animation bi bi-envelope-at-fill"></i>
        </a>
        <a href={cvLink} class="hover-text" target="_blank" rel="noopener noreferrer">
          <span class="tooltip-text" id="fade">{i18n.Card.cv}</span>
          <i class="animation bi bi-file-earmark-pdf-fill"></i>
        </a>
      </footer>
    </div>

    <div class="image">
      <img src={profileImage} alt={i18n.Card.profileImage} />
    </div>

    <LanguageSelector />
  </div>
</div>
